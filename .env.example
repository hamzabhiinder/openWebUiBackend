# Server Configuration
PORT=5000
NODE_ENV=development

# Database
PRISMA_DATABASE_URL="mysql://username:password@localhost:3306/openwebui"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-here"

# Session Secret
